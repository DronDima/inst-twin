{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
	"no-underscore-dangle": ["error", { "allowAfterThis": true }],
	"class-methods-use-this": 1,
	"no-underscore-dangle": 0
    },
    "parser": "babel-eslint"
}
